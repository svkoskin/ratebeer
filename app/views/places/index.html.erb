<h1>Search beer places</h1>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<p id="notice"><%= notice %></p>

<% if @places %>
  <table>
    <thead>
      <% Place.rendered_fields.each do |f| %>
        <td><%= f %></td>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
	<% Place.rendered_fields.each do |f| %>
	  <td><%= place.send(f) %></td>
	<% end %>
	<td><%= link_to 'Details', place_path(place.id) %></td>
      </tr>
    <% end %>
  </table>
<% end %>


